{
  "compilerOptions": {
    "baseUrl": ".",
    "outDir": "build/dist",
    "module": "esnext",
    "target": "es2018",
    "lib": [
      "es2018",
      "dom",
      "esnext.asynciterable"
    ],
    "types": [
      "react",
      "jest"
    ],
    // "sourceMap": true,
    "allowJs": true,
    "jsx": "react",
    "moduleResolution": "node",
    "rootDir": "src",
    // "forceConsistentCasingInFileNames": true,
    // "noImplicitReturns": true,
    // "noImplicitThis": true,
    // "noImplicitAny": true,
    // "importHelpers": true,
    // "strictNullChecks": true,
    // "suppressImplicitAnyIndexErrors": true,
    // "noUnusedLocals": true,
    "paths": {
      "*": [
        "*",
        "src/*",
        "types/*"
      ]
    },
  },
  "exclude": [
    "node_modules",
    "build",
    "scripts",
    "acceptance-tests",
    "webpack",
    "jest",
    "src/setupTests.ts",
  ],
  "include": [
    "src"
  ],
  "typeRoots": [
    "types"
  ]
}